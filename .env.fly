# Fly.io Production Environment Variables
# Copy this to .env for local testing of production config

# Application
ENVIRONMENT=production
PORT=8000

# Database (SQLite for Fly.io)
DATABASE_URL=sqlite:///app/data/corex.db

# JWT Configuration
JWT_SECRET=fly-production-secret-key-2024-corex-banking
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Security
RATE_LIMIT_RPM=100
PASSWORD_MIN_LENGTH=8
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCKOUT_DURATION=30

# Redis (not used in Fly.io single-machine deployment)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_URL=redis://localhost:6379

# RabbitMQ (not used in Fly.io single-machine deployment)
RABBITMQ_URL=amqp://guest:guest@localhost:5672/

# Logging
LOG_LEVEL=INFO